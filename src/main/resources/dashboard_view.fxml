<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cy_siao.controller.gui.DashboardController" prefWidth="800" prefHeight="600">
    <VBox spacing="10" >
        <Label text="Agency Status" style="-fx-font-size: 20px;"/>

        <HBox spacing="20">
            <PieChart fx:id="pieOccupation" prefWidth="350"/>
            <BarChart fx:id="barDepartures" prefWidth="400">
                <xAxis>
                    <CategoryAxis label="Status"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Number"/>
                </yAxis>
            </BarChart>
        </HBox>
    </VBox>
</AnchorPane>