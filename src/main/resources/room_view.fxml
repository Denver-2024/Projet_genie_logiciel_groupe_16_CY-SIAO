<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cy_siao.controller.gui.RoomControllerFx">
    <VBox prefHeight="503.0" prefWidth="592.0" spacing="10">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>
        <HBox spacing="10">
         <VBox>
            <children>
                  <Label text="Room Name:">
                  <VBox.margin>
                     <Insets bottom="5.0" />
                  </VBox.margin>
               </Label>
                  <TextField fx:id="nameField1">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </TextField>
                  <Label text="Max Beds:">
                  <VBox.margin>
                     <Insets bottom="5.0" />
                  </VBox.margin>
               </Label>
                  <Spinner fx:id="nbBedsMaxSpinner" prefHeight="26.0" prefWidth="160.0" />
            </children>
            <HBox.margin>
               <Insets />
            </HBox.margin>
         </VBox>
         <VBox prefHeight="153.0" prefWidth="202.0">
            <children>
                  <Label text=" Restriction Name:">
                  <VBox.margin>
                     <Insets bottom="5.0" />
                  </VBox.margin>
               </Label>
               <TextField fx:id="nameField2">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </TextField>
               <Label text="Gender Restriction">
                  <VBox.margin>
                     <Insets bottom="5.0" />
                  </VBox.margin>
               </Label>
               <ComboBox fx:id="genderRestriction" prefWidth="150.0" />
            </children>
         </VBox>
         <VBox prefHeight="130.0" prefWidth="170.0">
            <children>
               <Label text="Minimum Age">
                  <VBox.margin>
                     <Insets bottom="5.0" />
                  </VBox.margin>
               </Label>
               <TextField fx:id="nameField3">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </TextField>
               <Label text="Maximum Age">
                  <VBox.margin>
                     <Insets bottom="5.0" />
                  </VBox.margin>
               </Label>
               <TextField fx:id="nameField4">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </TextField>
            </children>
         </VBox>
        </HBox>

        <HBox spacing="10" />

        <HBox spacing="10">
            <Button fx:id="addButton" onAction="#handleAddRoom" text="Add Room" />
         <Button fx:id="updateButton" onAction="#handleUpdateRoom" text="Update Room" />
            <Button fx:id="deleteButton" onAction="#handleDeleteRoom" text="Delete Room" />
         <Button fx:id="addRestrictionButton" onAction="#handleAddRestriction" text="Add Restriction" />
        </HBox>

        <TableView fx:id="roomTableView" prefHeight="300">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="50" text="ID" />
                <TableColumn fx:id="nameCol" prefWidth="150" text="Name" />
                <TableColumn fx:id="nbBedsMaxCol" prefWidth="100" text="Max Beds" />
                <TableColumn fx:id="restrictionCol" prefWidth="250" text="Restrictions" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
