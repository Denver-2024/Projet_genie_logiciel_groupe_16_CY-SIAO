<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.cy_siao.controller.gui.RoomControllerFx">
    <top>
        <HBox alignment="TOP_LEFT" style="-fx-background-color: #f4f4f4;">
            <Pane HBox.hgrow="ALWAYS" />
            <Label text="Gestion des SÃ©jours" style="-fx-font-size: 16pt; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="backButton" text="Retour" style="-fx-font-weight: bold;">
                <padding>
                    <Insets left="10" right="10" top="5" bottom="5"/>
                </padding>
            </Button>
        </HBox>
    </top>

    <VBox spacing="10">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <HBox spacing="10">
         <VBox>
            <children>
                  <Label text="Room Name:">
                  <VBox.margin>
                     <Insets bottom="5.0" />
                  </VBox.margin>
               </Label>
                  <TextField fx:id="nameField1">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </TextField>
                  <Label text="Max Beds:">
                  <VBox.margin>
                     <Insets bottom="5.0" />
                  </VBox.margin>
               </Label>
                  <Spinner fx:id="nbBedsMaxSpinner" prefHeight="26.0" prefWidth="160.0" />
            </children>
            <HBox.margin>
               <Insets />
            </HBox.margin>
         </VBox>
         <VBox prefHeight="153.0" prefWidth="202.0">
            <children>
                  <Label text=" Restriction Name:">
                  <VBox.margin>
                     <Insets bottom="5.0" />
                  </VBox.margin>
               </Label>
               <TextField fx:id="nameField2">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </TextField>
               <Label text="Gender Restriction">
                  <VBox.margin>
                     <Insets bottom="5.0" />
                  </VBox.margin>
               </Label>
               <ComboBox fx:id="genderRestriction" prefWidth="150.0" />
            </children>
         </VBox>
         <VBox prefHeight="130.0" prefWidth="170.0">
            <children>
               <Label text="Minimum Age">
                  <VBox.margin>
                     <Insets bottom="5.0" />
                  </VBox.margin>
               </Label>
               <TextField fx:id="nameField3">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </TextField>
               <Label text="Maximum Age">
                  <VBox.margin>
                     <Insets bottom="5.0" />
                  </VBox.margin>
               </Label>
               <TextField fx:id="nameField4">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </TextField>
            </children>
         </VBox>
        </HBox>

        <HBox spacing="10" />

        <HBox spacing="10">
            <Button fx:id="addButton" onAction="#handleAddRoom" text="Add Room" />
         <Button fx:id="updateButton" onAction="#handleUpdateRoom" text="Update Room" />
            <Button fx:id="deleteButton" onAction="#handleDeleteRoom" text="Delete Room" />
         <Button fx:id="addRestrictionButton" onAction="#handleAddRestriction" text="Add Restriction" />
        </HBox>

        <TableView fx:id="roomTableView" prefHeight="300">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="50" text="ID" />
                <TableColumn fx:id="nameCol" prefWidth="150" text="Name" />
                <TableColumn fx:id="nbBedsMaxCol" prefWidth="100" text="Max Beds" />
                <TableColumn fx:id="restrictionCol" prefWidth="250" text="Restrictions" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
