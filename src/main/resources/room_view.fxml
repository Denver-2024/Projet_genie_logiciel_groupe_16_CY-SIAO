<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cy_siao.controller.gui.RoomControllerFx"
            stylesheets="@styles/style.css">

    <!-- TOP HEADER -->
    <top>
        <HBox alignment="TOP_LEFT" style="-fx-background-color: #f4f4f4;">
            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="Gestion des chambres" style="-fx-font-size: 16pt; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="backButton" text="Retour" style="-fx-font-weight: bold;">
                <padding>
                    <Insets left="10" right="10" top="5" bottom="5"/>
                </padding>
            </Button>
        </HBox>
    </top>

    <!-- CENTER CONTENT -->
    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>

            <HBox spacing="20">
                <!-- Room Info -->
                <VBox spacing="10">
                    <Label text="Nom de la chambre"/>
                    <TextField fx:id="nameField1"/>

                    <Label text="Nombre de lits max"/>
                    <Spinner fx:id="nbBedsMaxSpinner" editable="true" prefWidth="160"/>
                </VBox>

                <!-- Restriction Info -->
                <VBox spacing="10">
                    <Label text="Nom de la restriction"/>
                    <TextField fx:id="nameField2"/>

                    <Label text="Restriction de genre"/>
                    <ComboBox fx:id="genderRestriction" prefWidth="150"/>
                </VBox>

                <!-- Age Restrictions -->
                <VBox spacing="10">
                    <Label text="Âge minimum"/>
                    <TextField fx:id="minAgeField"/>

                    <Label text="Âge maximum"/>
                    <TextField fx:id="maxAgeField"/>

                    <Label text="Opérateur logique"/>
                    <ComboBox fx:id="logicOperator" prefWidth="150"/>
                </VBox>
            </HBox>

            <!-- Action Buttons -->
            <HBox spacing="10">
                <Button fx:id="addButton" text="Ajouter la chambre"/>
                <Button fx:id="updateButton" text="Mettre à jour"/>
                <Button fx:id="deleteButton" text="Supprimer"/>
                <Button fx:id="addRestrictionButton" text="Ajouter restriction"/>
            </HBox>

            <!-- TableView -->
            <TableView fx:id="roomTableView" prefHeight="300">
                <columns>
                    <TableColumn fx:id="idCol" prefWidth="50" text="ID"/>
                    <TableColumn fx:id="nameCol" prefWidth="150" text="Nom"/>
                    <TableColumn fx:id="nbBedsMaxCol" prefWidth="100" text="Lits max"/>
                    <TableColumn fx:id="restrictionCol" prefWidth="250" text="Restrictions"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
